<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weather"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/tv_countryname"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_hightemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" high"
        android:layout_marginEnd="73dp"
        android:layout_alignBaseline="@+id/tv_weather"
        android:layout_alignBottom="@+id/tv_weather"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_lowtemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="low"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toStartOf="@+id/tv_hightemperature"
        android:layout_marginEnd="33dp" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_countryname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="name "
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_weather" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~~"
        android:layout_alignBaseline="@+id/tv_hightemperature"
        android:layout_alignBottom="@+id/tv_hightemperature"
        android:layout_toStartOf="@+id/tv_hightemperature" />


</RelativeLayout>